{
	"blocks": [
		{
			"type": "header",
			"text": {
				"type": "plain_text",
				"text": ":link-run: Github Action Notification",
				"emoji": true
			}
		},
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "Deployment status: :white_check_mark: ${{ job.status }}"
			}
		},
		{
			"type": "divider"
		},
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "Build action URL:"
			},
			"accessory": {
				"type": "button",
				"text": {
					"type": "plain_text",
					"text": ":link: Link to Action",
					"emoji": true
				},
				"value": "action_url",
				"url": "https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }}",
				"action_id": "button-action"
			}
		}
	]
}
