{
	"blocks": [
		{
			"type": "header",
			"text": {
				"type": "plain_text",
				"text": ":link-run: Github Action Notification :link-run:\n{{ env.WORKFLOW_NAME }}",
				"emoji": true
			}
		},
		{
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "Build Name: {{ env.RELEASE_NAME }}\nStatus: {{ env.DEPLOY_STATUS }}"
			}
		},
    {
			"type": "section",
			"fields": [
				{
					"type": "plain_text",
					"text": "Repo: {{ env.REPOSITORY }}",
					"emoji": true
				},
				{
					"type": "plain_text",
					"text": "Branch/Tag: {{ env.REF_NAME }}",
					"emoji": true
				},
				{
					"type": "plain_text",
					"text": "SHA: {{ env.GITHUB_SHA }}",
					"emoji": true
				},
				{
					"type": "plain_text",
					"text": "Actor: {{ env.ACTOR }}",
					"emoji": true
				}
			]
		},
    {
			"type": "section",
			"text": {
				"type": "mrkdwn",
				"text": "Github Action URL"
			},
			"accessory": {
				"type": "button",
				"text": {
					"type": "plain_text",
					"text": ":link: Click Me",
					"emoji": true
				},
				"value": "github_action_url",
				"url": "https://github.com/${{ env.REPOSITORY }/actions/runs/${{ env.RUN_ID }}",
				"action_id": "button-action"
			}
		}
	]
}
