{
  "text": "",
  "attachments": [
    {
      "color": "{{ env.STATUS_COLOR }}",
      "blocks": [
        {
          "type": "header",
          "text": {
            "type": "plain_text",
            "text": ":link-run: Github Action Notification :link-run:\n{{ github.workflow }}",
            "emoji": true
          }
        },
        {
          "type": "section",
          "fields": [
            {
              "type": "plain_text",
              "text": "{{ env.RELEASE_NAME }}",
              "emoji": true
            },
            {
              "type": "plain_text",
              "text": "{{ github.actor }}",
              "emoji": true
            },
            {
              "type": "plain_text",
              "text": "{{ github.repository }}",
              "emoji": true
            },
            {
              "type": "plain_text",
              "text": "{{ github.ref_name }}",
              "emoji": true
            }
          ]
        },
        {
          "type": "section",
          "text": {
            "type": "mrkdwn",
            "text": "<https://github.com/{{ github.repository }}/actions/runs/{{ github.run_id }}|https://github.com/${{ github.repository }}/actions/runs/${{ github.run_id }}>"
          }
        },
        {
          "type": "section",
          "text": {
            "type": "mrkdwn",
            "text": "Action: {{ env.STATUS_TITLE }} Status: {{ env.STATUS_VALUE }}"
          }
        }
      ]
    }
  ]
}
